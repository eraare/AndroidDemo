<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/assistant"
    android:paddingLeft="@dimen/vertical_margin"
    android:paddingRight="@dimen/vertical_margin">

    <LinearLayout
        android:id="@+id/ll_center_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_switch_home"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/icon_light_on" />

        <TextView
            android:id="@+id/tv_switch_tip_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/vertical_margin"
            android:text="点击开灯"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_body"
            android:visibility="gone" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_top_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_center_home"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暗"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_caption"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="亮"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_caption"
                android:visibility="gone" />

            <SeekBar
                android:id="@+id/sb_value_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/content_margin"
                android:layout_weight="1"
                android:max="100"
                android:thumb="@drawable/icon_value_home"
                android:thumbOffset="0dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暗"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_caption"
                android:visibility="gone" />

            <SeekBar
                android:id="@+id/sb_saturation_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/content_margin"
                android:layout_weight="1"
                android:max="100"
                android:thumb="@drawable/icon_saturation_home"
                android:thumbOffset="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="亮"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_caption"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/ll_center_home"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/vertical_margin"
            android:paddingRight="@dimen/vertical_margin">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/main" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/assistant"
                android:text="延迟关灯"
                android:textColor="@color/main"
                android:textSize="@dimen/text_size_subhead" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.guohua.mlight.view.widget.TimerView
                android:id="@+id/tv_timer_five_home"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_margin="8dp"
                app:selected="false"
                app:unit="分钟"
                app:value="5" />

            <com.guohua.mlight.view.widget.TimerView
                android:id="@+id/tv_timer_fifteen_home"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_margin="8dp"
                app:selected="false"
                app:unit="分钟"
                app:value="15" />

            <com.guohua.mlight.view.widget.TimerView
                android:id="@+id/tv_timer_thirty_home"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_margin="8dp"
                app:selected="false"
                app:unit="分钟"
                app:value="30" />

            <com.guohua.mlight.view.widget.TimerView
                android:id="@+id/tv_timer_sixty_home"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_margin="8dp"
                app:selected="false"
                app:unit="分钟"
                app:value="60" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>