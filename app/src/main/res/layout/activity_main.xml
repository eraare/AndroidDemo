<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.guohua.mlight.view.activity.MainActivity">

    <com.guohua.mlight.view.widget.TitleView
        android:id="@+id/tv_title_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_navigation_bar_height"
        android:elevation="2dp"
        app:leftTitle="设备管理"
        app:titleText="@string/app_name" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_pager_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.ashokvarma.bottomnavigation.BottomNavigationBar
        android:id="@+id/bnb_bar_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_navigation_bar_height"
        android:layout_gravity="bottom"
        app:bnbActiveColor="@color/main"
        app:bnbBackgroundColor="@color/white"
        app:bnbBackgroundStyle="background_style_default"
        app:bnbInactiveColor="@color/assistant"
        app:bnbMode="mode_default" />

</LinearLayout>
