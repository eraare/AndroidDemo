<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/greya"
        android:orientation="vertical"
        android:id="@+id/ll_activity_pallet"
        tools:context=".view.activity.PalletActivity">

        <include
            layout="@layout/include_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_value_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_text"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:layout_weight="0.25"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_weight="0.6">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/moon" />

            <SeekBar
                android:id="@+id/sb_brightness_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="255" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sun" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="8.4">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/view_vertical_margin"
                    android:layout_marginLeft="@dimen/framelayout_horizontal_margin"
                    android:layout_marginRight="@dimen/framelayout_horizontal_margin"
                    android:layout_marginTop="@dimen/view_vertical_margin"
                    >

                    <ImageView
                        android:id="@+id/iv_color_main"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/colors" />

                    <ImageButton
                        android:id="@+id/btn_switch_main"
                        android:layout_width="@dimen/button_color_size"
                        android:layout_height="@dimen/button_color_size"
                        android:layout_gravity="center"
                        android:background="@drawable/selector_circle_bg"
                        android:padding="12dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/light_off" />
                </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="0.5">

            <Button
                android:id="@+id/btn_red_main"
                android:layout_width="@dimen/button_color_size"
                android:layout_height="@dimen/button_color_size"
                android:layout_marginLeft="@dimen/button_horizontal_margin"
                android:layout_marginRight="@dimen/button_horizontal_margin"
                android:background="@drawable/shape_circle_red"
                android:text="@string/red"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_orange_main"
                android:layout_width="@dimen/button_color_size"
                android:layout_height="@dimen/button_color_size"
                android:layout_marginLeft="@dimen/button_horizontal_margin"
                android:layout_marginRight="@dimen/button_horizontal_margin"
                android:background="@drawable/shape_circle_orange"
                android:text="@string/orange"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_yellow_main"
                android:layout_width="@dimen/button_color_size"
                android:layout_height="@dimen/button_color_size"
                android:layout_marginLeft="@dimen/button_horizontal_margin"
                android:layout_marginRight="@dimen/button_horizontal_margin"
                android:background="@drawable/shape_circle_yellow"
                android:text="@string/yellow"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_green_main"
                android:layout_width="@dimen/button_color_size"
                android:layout_height="@dimen/button_color_size"
                android:layout_marginLeft="@dimen/button_horizontal_margin"
                android:layout_marginRight="@dimen/button_horizontal_margin"
                android:background="@drawable/shape_circle_green"
                android:text="@string/green"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="0.5" >

            <Button
                android:id="@+id/btn_cyan_main"
                android:layout_width="@dimen/button_color_size"
                android:layout_height="@dimen/button_color_size"
                android:layout_marginLeft="@dimen/button_horizontal_margin"
                android:layout_marginRight="@dimen/button_horizontal_margin"
                android:background="@drawable/shape_circle_cyan"
                android:text="@string/cyan"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_blue_main"
                android:layout_width="@dimen/button_color_size"
                android:layout_height="@dimen/button_color_size"
                android:layout_marginLeft="@dimen/button_horizontal_margin"
                android:layout_marginRight="@dimen/button_horizontal_margin"
                android:background="@drawable/shape_circle_blue"
                android:text="@string/blue"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_purple_main"
                android:layout_width="@dimen/button_color_size"
                android:layout_height="@dimen/button_color_size"
                android:layout_marginLeft="@dimen/button_horizontal_margin"
                android:layout_marginRight="@dimen/button_horizontal_margin"
                android:background="@drawable/shape_circle_purple"
                android:text="@string/purple"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_white_main"
                android:layout_width="@dimen/button_color_size"
                android:layout_height="@dimen/button_color_size"
                android:layout_marginLeft="@dimen/button_horizontal_margin"
                android:layout_marginRight="@dimen/button_horizontal_margin"
                android:background="@drawable/shape_circle_white"
                android:text="@string/white"
                android:textColor="@color/main" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/timer" />

            <TextView
                android:id="@+id/tv_timer_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_text"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0åˆ†"
                android:textColor="@color/white" />

            <SeekBar
                android:id="@+id/sb_timer_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="60" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60åˆ†"
                android:textColor="@color/white" />
        </LinearLayout>
    <!--</LinearLayout>-->
</LinearLayout>