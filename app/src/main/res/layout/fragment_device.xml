<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/assistant">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_refresh_device"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.guohua.sdk.view.widget.LocalRecyclerView
            android:id="@+id/rv_device_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <TextView
        android:id="@+id/tv_empty_view_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableTop="@drawable/icon_no_device" />

</FrameLayout>