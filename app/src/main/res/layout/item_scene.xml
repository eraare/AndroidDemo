<?xml version="1.0" encoding="utf-8"?>
<com.guohua.mlight.view.widget.SquareLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_rectangle_bg"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_picture_scene_scene"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_margin="@dimen/vertical_margin"
        android:src="@drawable/icon_center_normal" />

    <TextView
        android:id="@+id/tv_title_scene_scene"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="睡眠模式"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_body" />

</com.guohua.mlight.view.widget.SquareLinearLayout>