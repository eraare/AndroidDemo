<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guohua.mlight.view.activity.SelfieActivity">

    <com.flurgle.camerakit.CameraView
        android:id="@+id/cv_preview_selfie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fl_bottom_selfie"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        app:ckFlash="auto" />


    <FrameLayout
        android:id="@+id/fl_bottom_selfie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/black"
        android:padding="25dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_camera_selfie"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_take_picture"
            app:civ_border_color="@color/white"
            app:civ_border_width="1px" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_album_selfie"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical|left"
            android:src="@drawable/icon_view_picture"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_switch_selfie"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical|right"
            android:src="@drawable/icon_switch_camera"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp" />
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_set_selfie"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:padding="3dp"
        android:src="@drawable/icon_close"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_flash_selfie"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:src="@drawable/icon_flash_auto" />

</RelativeLayout>
