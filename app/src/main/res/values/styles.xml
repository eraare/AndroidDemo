<resources>
    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <!--主题颜色设定-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Main application theme.-->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
    </style>
    <!-- Full screen theme.-->
    <style name="AppTheme.FullScreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Toolbar标题样式 -->
    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--*******************************************Other Other*******************************-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!--drivemode_list_item.xml-->
    <style name="timer_label">
        <item name="android:textSize">@dimen/timer_label_font_size</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="switch_light">
        <item name="@attr/colorChecked">#FFFFFF</item>
        <item name="@attr/colorUnChecked">#181818</item>
        <item name="@attr/backgroundDrawable">@drawable/switch_bg_holo_light</item>
        <item name="@attr/switchDrawable">@drawable/switch_thumb_activated_holo_light</item>
    </style>

    <style name="item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>

