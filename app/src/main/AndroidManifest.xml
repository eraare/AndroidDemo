<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.guohua.mlight">

    <!-- 所需要的所有权限 蓝牙 模糊定位 -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- Google应用市场特征配置 -->
    <uses-feature android:name="android.hardware.bluetooth_le" />

    <application
        android:name=".common.base.AppContext"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:persistent="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- 欢迎界面 -->
        <activity
            android:name=".view.activity.SplashActivity"
            android:configChanges="locale"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 主界面 -->
        <activity
            android:name=".view.activity.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".view.activity.ScanActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.ControlActivity"
            android:screenOrientation="portrait" />
        <!-- Center中的界面 -->
        <activity
            android:name=".view.activity.AppActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.HelpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.UsActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>