            android:exported="true">
            <intent-filter>
                <action android:name="com.guohua.glight.service.GradientRampService" />
            </intent-filter>
        </service>

        <!-- 情景模式服务 -->
        <service
            android:name=".service.DriveModeService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.guohua.glight.service.DriveModeService" />
