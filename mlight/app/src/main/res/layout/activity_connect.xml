<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.guohua.mlight.ConnectActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/main"
        android:paddingRight="@dimen/horizontal_padding">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/large_icon_size"
                android:layout_height="@dimen/large_icon_size"
                android:layout_margin="@dimen/content_margin"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_group_white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_title_connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/connect_device_title"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_about_connect"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:onClick="about"
            android:padding="@dimen/icon_padding"
            android:src="@drawable/icon_forward"
            android:visibility="gone" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_container_connect"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/shape_rect_bg"
        android:orientation="horizontal"
        android:padding="1dp">

        <LinearLayout
            android:id="@+id/ll_group_connect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_group_icon_connect"
                android:layout_width="@dimen/large_icon_size"
                android:layout_height="@dimen/large_icon_size"
                android:layout_margin="@dimen/content_margin"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_device_selected" />

            <TextView
                android:id="@+id/tv_group_title_connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/connect_device_title"
                android:textColor="@color/main" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_personal_connect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_personal_icon_connect"
                android:layout_width="@dimen/large_icon_size"
                android:layout_height="@dimen/large_icon_size"
                android:layout_margin="@dimen/content_margin"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_center_normal" />

            <TextView
                android:id="@+id/tv_personal_title_connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/connect_personal_title"
                android:textColor="@color/greyd" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
